{
  "name": "household-budget",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode development",
    "build:production": "tsc && vite build --mode production",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && npm run lint:exports",
    "preview": "vite preview",
    "deploy:dev": "npm run lint && npm run build && firebase deploy -P development",
    "deploy:prod": "npm run lint && npm run build:production && firebase deploy -P production",
    "typecheck": "tsc",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "lint:exports": "node find-unused-exports.cjs",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "firebase": "10.13.1",
    "react": "18.3.1",
    "react-datepicker": "7.3.0",
    "react-dom": "18.3.1",
    "react-error-boundary": "4.0.13",
    "react-firebase-hooks": "5.1.1",
    "react-router-dom": "6.26.1",
    "shortid": "2.2.16",
    "styled-components": "6.1.13"
  },
  "devDependencies": {
    "@testing-library/cypress": "9.0.0",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.5.2",
    "@types/react": "18.3.5",
    "@types/react-datepicker": "7.0.0",
    "@types/react-dom": "18.3.0",
    "@types/react-router-dom": "5.3.3",
    "@types/shortid": "0.0.32",
    "@types/styled-components": "5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "3.7.0",
    "cypress": "12.9.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "patch-package": "8.0.0",
    "ts-unused-exports": "10.1.0",
    "typescript": "5.5.4",
    "vite": "5.4.2",
    "vite-tsconfig-paths": "5.0.1"
  }
}
